	author = {Konno, Kotaro},
	month = sep,
	year = {2011},
	keywords = {Adaptation, Animals, Apocynaceae, Bombyx, Disease Resistance, Insecta, Latex, Morus, Physiological, Plant Diseases, Plant Physiological Phenomena, Plant Proteins, Plants},
	pages = {1510--1530},
	annote = {\_eprint: 21450319 \_eprinttype: pmid},
	annote = {\_eprint: 21450319 \_eprinttype: pmid},
