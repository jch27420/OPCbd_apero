	author = {Koller, Robert and Scheu, Stefan and Bonkowski, Michael and Robin, Christophe},
	month = oct,
	year = {2013},
	keywords = {C pulse labelling, Carbon allocation, Microbial interactions, N litter, Plant growth, PLFA},
	pages = {204--210},
}

