	urldate = {2024-12-11},
	booktitle = {Biological {Invasions} {Belowground}: {Earthworms} as {Invasive} {Species}},
	publisher = {Springer Netherlands},
	author = {Frelich, Lee E. and Hale, Cindy M. and Reich, Peter B. and Holdsworth, Andrew R. and Scheu, Stefan and Heneghan, Liam and Bohlen, Patrick J.},
	editor = {Hendrit, Paul F.},
	year = {2006},
