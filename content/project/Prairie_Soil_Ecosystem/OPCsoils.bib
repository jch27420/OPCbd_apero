	urldate = {2024-10-22},
	journal = {Global Ecology and Biogeography},
	author = {Lavelle, Patrick and Mathieu, Jérôme and Spain, Alister and Brown, George and Fragoso, Carlos and Lapied, Emmanuel and De Aquino, Adriana and Barois, Isabelle and Barrios, Edmundo and Barros, Maria Eleusa and Bedano, Jose Camilo and Blanchart, Eric and Caulfield, Mark and Chagueza, Yamileth and Dai, Jun and Decaëns, Thibaud and Dominguez, Anahi and Dominguez, Yamileth and Feijoo, Alexander and Folgarait, Patricia and Fonte, Steven J. and Gorosito, Norma and Huerta, Esperanza and Jimenez, Juan Jose and Kelly, Courtland and Loranger, Gladys and Marchão, Robelio and Marichal, Raphael and Praxedes, Catarina and Rodriguez, Leonardo and Rousseau, Guillaume and Rousseau, Laurent and Ruiz, Nuria and Sanabria, Catalina and Suarez, Juan Carlos and Tondoh, Jerôme Ebagnerin and De Valença, Anne and Vanek, Steven J. and Vasquez, Joel and Velasquez, Elena and Webster, Emily and Zhang, Chi},
	year = {2022},
