}

@article{vance_phosphorus_2003,
	title = {Phosphorus acquisition and use: critical adaptations by plants for securing a nonrenewable resource},
	volume = {157},
	issn = {1469-8137},
	shorttitle = {Phosphorus acquisition and use},
