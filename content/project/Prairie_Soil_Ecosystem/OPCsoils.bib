	number = {2},
	urldate = {2024-10-31},
	journal = {FEMS Microbiology Letters},
	author = {Li, Lei and Ma, Mingchuan and Liu, Yongjun and Zhou, Jingwei and Qu, Qing and Lu, Kaiping and Fu, Denggao and Zhang, KeQin},
	month = sep,
