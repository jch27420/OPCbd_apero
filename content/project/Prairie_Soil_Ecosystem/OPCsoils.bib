	language = {eng},
	number = {1},
	journal = {Microbiome},
	author = {Ter Horst, Anneliek M. and Santos-Medellín, Christian and Sorensen, Jackson W. and Zinke, Laura A. and Wilson, Rachel M. and Johnston, Eric R. and Trubl, Gareth and Pett-Ridge, Jennifer and Blazewicz, Steven J. and Hanson, Paul J. and Chanton, Jeffrey P. and Schadt, Christopher W. and Kostka, Joel E. and Emerson, Joanne B.},
