	keywords = {membrane protein, mineral nutrition, phosphorus, roots},
	pages = {629--642},
}

@article{lambers_root_2006,
	title = {Root {Structure} and {Functioning} for {Efficient} {Acquisition} of {Phosphorus}: {Matching} {Morphological} and {Physiological} {Traits}},
	volume = {98},
	issn = {0305-7364},
	shorttitle = {Root {Structure} and {Functioning} for {Efficient} {Acquisition} of {Phosphorus}},
	url = {https://doi.org/10.1093/aob/mcl114},
	doi = {10.1093/aob/mcl114},
	abstract = {• Background Global phosphorus (P) reserves are being depleted, with half-depletion predicted to occur between 2040 and 2060. Most of the P applied in fertilizers may be sorbed by soil, and not be available for plants lacking specific adaptations. On the severely P-impoverished soils of south-western Australia and the Cape region in South Africa, non-mycorrhizal species exhibit highly effective adaptations to acquire P. A wide range of these non-mycorrhizal species, belonging to two monocotyledonous and eight dicotyledonous families, produce root clusters. Non-mycorrhizal species with root clusters appear to be particularly effective at accessing P when its availability is extremely low.• Scope There is a need to develop crops that are highly effective at acquiring inorganic P (Pi) from P-sorbing soils. Traits such as those found in non-mycorrhizal root-cluster-bearing species in Australia, South Africa and other P-impoverished environments are highly desirable for future crops. Root clusters combine a specialized structure with a specialized metabolism. Native species with such traits could be domesticated or crossed with existing crop species. An alternative approach would be to develop future crops with root clusters based on knowledge of the genes involved in development and functioning of root clusters.• Conclusions Root clusters offer enormous potential for future research of both a fundamental and a strategic nature. New discoveries of the development and functioning of root clusters in both monocotyledonous and dicotyledonous families are essential to produce new crops with superior P-acquisition traits.},
	number = {4},
	urldate = {2024-08-16},
	journal = {Annals of Botany},
	author = {LAMBERS, HANS and SHANE, MICHAEL W. and CRAMER, MICHAEL D. and PEARSE, STUART J. and VENEKLAAS, ERIK J.},
	month = oct,
	year = {2006},
	pages = {693--713},
}

@article{tarafdar_organic_1988,
