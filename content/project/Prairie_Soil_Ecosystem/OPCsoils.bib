	author = {Knudsen, Jette T. and Eriksson, Roger and Gershenzon, Jonathan and Ståhl, Bertil},
	month = jan,
	year = {2006},
	keywords = {Apocynaceae, Botanical Review, Butanoate, Floral Scent, Hexanoate},
	pages = {1},
}

@article{zhalnina_dynamic_2018,
