@article{gerke_excretion_1994,
	title = {The excretion of citric and malic acid by proteoid roots of {Lupinus} albus {L}.; effects on soil solution concentrations of phosphate, iron, and aluminum in the proteoid rhizosphere in samples of an oxisol and a luvisol},
