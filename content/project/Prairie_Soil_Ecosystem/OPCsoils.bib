	author = {Beaulieu, Frédéric and Knee, Wayne and Nowell, Victoria and Schwarzfeld, Marla and Lindo, Zoë and Behan-Pelletier, Valerie M. and Lumley, Lisa and Young, Monica R. and Smith, Ian and Proctor, Heather C. and Mironov, Sergei V. and Galloway, Terry D. and Walter, David E. and Lindquist, Evert E.},
