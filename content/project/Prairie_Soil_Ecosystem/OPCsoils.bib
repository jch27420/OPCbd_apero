	pmid = {34482540},
	keywords = {Fungi, Glycoproteins, Fungal Proteins, Mycorrhizae, arbuscular mycorrhizal fungi (AMF), glomalin, Glomeromycota, HSP60, soil aggregation, soil carbon storage, soil health},
	pages = {1572--1581},
}

