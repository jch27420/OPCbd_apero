	number = {3},
	urldate = {2024-12-30},
	journal = {Ecology},
	author = {Post, David M.},
	year = {2002},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1890/0012-9658\%282002\%29083\%5B0703\%3AUSITET\%5D2.0.CO\%3B2},
	keywords = {stable isotopes, isotopic baseline, lake food webs, long-lived consumers, trophic fractionation, trophic position, δ13C, δ15N},
	pages = {703--718},
}

