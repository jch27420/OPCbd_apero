	keywords = {communities, land cover, Macrofauna database, network analysis, soil ecology, soil macroinvertebrates},
	pages = {1261--1276},
}

@article{zhao_species-dependent_2000,
	title = {Species-dependent effects of border cell and root tip exudates on nematode behavior},
