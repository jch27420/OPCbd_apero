	pmid = {20348213},
	pmcid = {PMC2899917},
	keywords = {Acclimatization, Acid Phosphatase, Alleles, Arabidopsis, Arabidopsis Proteins, DNA, Bacterial, Gene Expression Regulation, Enzymologic, Gene Expression Regulation, Plant, Glycoproteins, Intracellular Space, Isoenzymes, Mutagenesis, Insertional, Mutation, Phosphates, Protein Transport, Reproducibility of Results, Seedlings, Up-Regulation, Vacuoles},
