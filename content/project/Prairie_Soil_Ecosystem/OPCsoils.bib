	urldate = {2024-09-13},
	journal = {Global Biogeochemical Cycles},
	author = {Lana, A. and Bell, T. G. and Simó, R. and Vallina, S. M. and Ballabrera-Poy, J. and Kettle, A. J. and Dachs, J. and Bopp, L. and Saltzman, E. S. and Stefels, J. and Johnson, J. E. and Liss, P. S.},
	year = {2011},
