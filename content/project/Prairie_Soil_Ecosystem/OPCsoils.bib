@article{golden_caenorhabditis_1984,
	title = {The \textit{{Caenorhabditis} elegans} dauer larva: {Developmental} effects of pheromone, food, and temperature},
	volume = {102},
	issn = {0012-1606},
	shorttitle = {The \textit{{Caenorhabditis} elegans} dauer larva},
