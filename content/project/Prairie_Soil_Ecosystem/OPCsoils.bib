	keywords = {Environmental Chemistry, faba bean, field pea, rhizosphere, root exudates, soil phosphorus fractions, white lupin},
	pages = {109--120},
}

@article{hurley_dual-targeted_2010,
	title = {The dual-targeted purple acid phosphatase isozyme {AtPAP26} is essential for efficient acclimation of {Arabidopsis} to nutritional phosphate deprivation},
