@article{solascasas_edaphic_2022,
	title = {Edaphic arthropods as indicators of the ecological condition of temperate grassland ecosystems: {A} systematic review},
	volume = {142},
	issn = {1470-160X},
	shorttitle = {Edaphic arthropods as indicators of the ecological condition of temperate grassland ecosystems},
