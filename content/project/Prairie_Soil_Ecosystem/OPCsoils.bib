}

@article{hopfensperger_influence_2011,
	title = {Influence of {Invasive} {Earthworms} on {Above} and {Belowground} {Vegetation} in a {Northern} {Hardwood} {Forest}},
	volume = {166},
	issn = {0003-0031, 1938-4238},
	url = {https://bioone.org/journals/the-american-midland-naturalist/volume-166/issue-1/0003-0031-166.1.53/Influence-of-Invasive-Earthworms-on-Above-and-Belowground-Vegetation-in/10.1674/0003-0031-166.1.53.full},
