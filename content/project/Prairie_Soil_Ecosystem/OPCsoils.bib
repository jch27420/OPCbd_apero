	keywords = {Molecular Sequence Data, Mutation, Arabidopsis, Arabidopsis Proteins, Plant Roots, Amino Acids, Organic Anion Transporters, DNA, Plant, Genes, Plant, Aluminum, Electrophysiology, Polymorphism, Genetic},
