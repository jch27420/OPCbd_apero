@article{resner_invasive_2015,
	title = {Invasive {Earthworms} {Deplete} {Key} {Soil} {Inorganic} {Nutrients} ({Ca}, {Mg}, {K}, and {P}) in a {Northern} {Hardwood} {Forest}},
